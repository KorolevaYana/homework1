<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="ru.ifmo.android_2016.calc.CalculatorActivity"
    android:orientation="vertical"
    android:transitionGroup="true">

    <TextView
        android:id="@+id/textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_weight="0.2"
        android:textAlignment="viewEnd"
        android:layout_gravity="bottom|right"
        android:textIsSelectable="false"
        android:textSize="30dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.15">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:id="@+id/button1"
            android:layout_gravity="left|center"
            android:onClick="onClickDigit"
            android:textSize="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2"
            android:id="@+id/button2"
            android:layout_gravity="center"
            android:onClick="onClickDigit"
            android:textSize="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3"
            android:id="@+id/button3"
            android:layout_gravity="center"
            android:onClick="onClickDigit"
            android:textSize="30dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+"
            android:id="@+id/button_add"
            android:layout_weight="0.25"
            android:onClick="onClickOperation"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.15">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4"
            android:id="@+id/button4"
            android:layout_gravity="center"
            android:onClick="onClickDigit"
            android:textSize="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5"
            android:id="@+id/button5"
            android:layout_gravity="center"
            android:onClick="onClickDigit"
            android:textSize="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="6"
            android:id="@+id/button6"
            android:layout_gravity="center"
            android:onClick="onClickDigit"
            android:textSize="30dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-"
            android:id="@+id/button_sub"
            android:layout_weight="0.25"
            android:onClick="onClickOperation"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7"
            android:id="@+id/button7"
            android:layout_gravity="center"
            android:onClick="onClickDigit"
            android:textSize="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="8"
            android:id="@+id/button8"
            android:layout_gravity="center"
            android:onClick="onClickDigit"
            android:textSize="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9"
            android:id="@+id/button9"
            android:layout_gravity="center"
            android:onClick="onClickDigit"
            android:textSize="30dp" />

        <Button
                android:layout_height="match_parent"
                android:text="*"
                android:id="@+id/button_mul"
                android:layout_weight="0.25"
                android:onClick="onClickOperation"
                android:textSize="30dp" android:layout_width="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.15">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="."
            android:id="@+id/button_point"
            android:layout_gravity="center"
            android:onClick="onClickDigit"
            android:textSize="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/button0"
            android:layout_gravity="center"
            android:onClick="onClickDigit"
            android:textSize="30dp" />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="C"
                android:id="@+id/button_c"
                android:layout_gravity="center"
                android:onClick="onClickC"
                android:textSize="30dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="/"
            android:id="@+id/button_div"
            android:layout_weight="0.25"
            android:onClick="onClickOperation"
            android:textSize="30dp" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/button_eq"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15"
        android:onClick="onClickEquals"
        android:textSize="30dp" />

</LinearLayout>
